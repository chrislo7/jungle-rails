<article class="review dl-horizontal">
  <% user = User.find review.user_id %>
  <dt class="review-heading">User</dt>
   <dd><%= user.name %></dd>
  <dt class="review-heading">Rating</dt>
   <dd><%= review.rating %></dd>
  <dt class="review-heading">Description</dt>
   <dd><%= review.description%></dd>
  <dt class="review-heading">Created At</dt>
   <dd><%= review.created_at.strftime('%B %d %Y, %A') %></dd>
</article>